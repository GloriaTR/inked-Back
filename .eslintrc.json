{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["xo", "prettier"],
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier"],
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-unused-vars": "error",
        "@typescript-eslint/consistent-type-definitions": ["error", "interface"]
      }
    },
    {
      "files": ["**/models/**/*.ts"],
      "rules": {
        "@typescript-eslint/naming-convention": ["off"]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": ["Router"]
      }
    ],
    "no-implicit-coercion": "off",
    "no-console": "error"
  }
}
